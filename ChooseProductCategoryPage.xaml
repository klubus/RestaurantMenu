<Page x:Class="Baza_Danych.ChooseProductCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baza_Danych"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="500"
      Title="ChooseProductCategoryPage" Background="Black">

    <Grid>
        <Label HorizontalAlignment="Center" FontFamily="Doppio One" FontSize="14" Height="30" VerticalAlignment="Top" Foreground="#FFFBF7F7">Wybierz kategorię</Label>
        <StackPanel Orientation="Horizontal" Height="50" Margin="25,40,0,0" VerticalAlignment="Top">
            <Button Width="110" Background="#FF673A1B" Foreground="White" x:Name="Soups_Btn" Click="Soups_Btn_Click">Zupy</Button>
            <Button Width="110" Background="#FF673A1B" Foreground="White" x:Name="MainDishes_Btn" Click="MainDishes_Btn_Click">Dania Główne</Button>
            <Button Width="110" Background="#FF673A1B" Foreground="White" x:Name="Desserts_Btn" Click="Desserts_Btn_Click">Desery</Button>
            <Button Width="110" Background="#FF673A1B" Foreground="White" x:Name="Drinks_Btn" Click="Drinks_Btn_Click">Napoje</Button>
        </StackPanel>
    </Grid>
</Page>
